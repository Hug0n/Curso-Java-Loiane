package com.loiane.cursojava.aula37a43exerc.Heranca_e_Polimorfismo.exerc1;

import java.util.Scanner;

import com.loiane.cursojava.aula28a33exerc.Const_Encaps_OverL.exerc2.ContaCorrente;

public class TesteContas {
	
	static Scanner e = new Scanner(System.in);
	private static String nomePessoa;


	public static void main(String[] args) {

		ContaBancaria cBancaria = new ContaBancaria();
		ContaPoupanca cPoupa = new ContaPoupanca();
		ContaEspecial cEspecial = new ContaEspecial();
		
	}
	
	private static void loop() {

		boolean loop = true;
		int opcao = 0;

		ContaBancaria variavelConta = Pessoa1;
		nomePessoa = "ContaPoupanca";

		while (loop) {

			System.out.println("\nQual operação deseja executar " + nomePessoa + "?");
			System.out.println("1 - Saque");
			System.out.println("2 - Depósito");
			System.out.println("3 - Consulta");
			System.out.println("4 - Informações sobre Conta Especial");
			System.out.println("5 - Trocar de Usuário");
			System.out.println("6 - Sair");

			opcao = e.nextInt();

			if (opcao == 1) {
				System.out.println("Digite o valor do saque: ");
				variavelConta.sacar(e.nextDouble());
			} else if (opcao == 2) {
				System.out.println("Digite o valor do depósito: ");
				variavelConta.depositar(e.nextDouble());
			} else if (opcao == 3) {
				variavelConta.consultar();
			} else if (opcao == 4) {
				variavelConta.verificarChequeEspecial();
			} else if (opcao == 5) {
				variavelConta = verificarPessoa(variavelConta);
			} else if (opcao == 6) {
				loop = false;
				System.out.println("Agradecemos a sua preferência. Queremos te ver de novo em breve!");

			}
		}
	}
	
	private static ContaCorrente verificarPessoa(ContaBancaria variavelConta) {
		if (variavelConta == Pessoa1) {
			variavelConta = Pessoa2;
			nomePessoa = "ContaEspecial";
		} else {
			variavelConta = Pessoa1;
			nomePessoa = "ContaPoupanca";
		}
		System.out.println("Usuário alterado!");
		return variavelConta;
	}
}

